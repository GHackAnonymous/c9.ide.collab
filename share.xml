<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "window"
      center    = "true"
      height    = "170"
      icon      = ""
      skin      = "bk-window2"
      resizable = "true"
      title     = "Share Workspace"
      width     = "480"
      class     = "filesave"
      draggable = "true">
        <a:vbox
          anchors   = "10 10 0 10"
          padding   = "5">
            <a:hbox
              align     = "center"
              padding   = "5">
                <b>Cloud9 User:</b>
                <a:textbox
                  id="txtUsername"
                  skin="searchbox"
                  initial-message="C9 username or email"
                  flex="7"
                  width="100%"
                  focusselect="true" />
            </a:hbox>

            <a:hbox edge="5 5 2 5" align="center">
              <b>Workspace Access: </b>
              <a:dropdown id="ddAccess" skin="dropdown-dark-glossy" value="rw" width="100">
                <a:item value="r" caption="Read-Only" />
                <a:item value="rw" caption="Read-Write" />
              </a:dropdown>
            </a:hbox>

            <a:hbox edge="20 0 10" pack="end" padding="8">
                <a:filler />
                <a:button
                  id       = "btnCancel"
                  skin     = "btn-default-css3"
                  caption  = "Cancel"
                />
                <a:button
                  id      = "btnInvite"
                  class   = "btn-green"
                  caption = "Invite"
                  skin    = "btn-default-css3"
                />
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>